@model IEnumerable<ContactManager.Models.Contact>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

<h4>Contacts list</h4>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add().
   Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(c => Html.ActionLink("Addresses", "Index", "Addresses", new { id = c.Id }, null));
    Columns.Add(c => c.FirstName).Titled("First name").Filterable(true);
    Columns.Add(c => c.LastName).Titled("Last name").Filterable(true);
    Columns.Add(c => c.EmailAddress).Titled("Email address").Filterable(true);
    Columns.Add(c => c.NumberOfComputers).Titled("Computers #").Filterable(true);
    Columns.Add().
    Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { o.Id, ViewBag.ContactId }));
    Columns.Add().
   Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(o => Html.ActionLink("View", "Details", new { o.Id, ViewBag.ContactId }));
    Columns.Add().
   Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { o.Id, ViewBag.ContactId }));
}).WithPaging(5).Filterable().Sortable(true)

</div>

<div>
    <br/>
    @Html.ActionLink("Display contacts summary", "Summary")
</div>
